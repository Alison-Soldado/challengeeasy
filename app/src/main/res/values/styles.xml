<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonSimulate">
        <item name="android:layout_marginLeft">@dimen/margin_tallest</item>
        <item name="android:layout_marginStart">@dimen/margin_tallest</item>
        <item name="android:layout_marginEnd">@dimen/margin_tallest</item>
        <item name="android:layout_marginRight">@dimen/margin_tallest</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="textViewSimulation">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editTextSimulation">
        <item name="android:textSize">@dimen/text_size_tall</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
