<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_border">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_result_simulation_text_view_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_border"
            android:text="@string/activity_result_simulation_text_result"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_result_simulation_text_view_value_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            android:textAlignment="center"
            android:textColor="@color/gray_504D4D"
            android:textSize="38sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_result"
            tools:text="R$ 1088,69" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/activity_result_simulation_text_view_yield_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            android:text="@string/activity_result_simulation_text_yield"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_value_result" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_value_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tallest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_yield_total"
            app:text_result="@string/activity_result_simulation_text_value_apply" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_value_gross"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_value_apply"
            app:text_result="@string/activity_result_simulation_text_value_grosss" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_value_investment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_value_gross"
            app:text_result="@string/activity_result_simulation_text_value_investment" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/actiivity_result_simulation_text_view_ir_investment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_value_investment"
            app:text_result="@string/activity_result_simulation_text_ir_investment" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_net_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actiivity_result_simulation_text_view_ir_investment"
            app:text_result="@string/activity_result_simulation_text_net_value" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_date_redemption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tallest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_net_value"
            app:text_result="@string/activity_result_simulation_text_date_redemption" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_continuous_days"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_date_redemption"
            app:text_result="@string/activity_result_simulation_text_continuos_days" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_monthly_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_continuous_days"
            app:text_result="@string/activity_result_simulation_text_monthly_income" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_percentage_cdi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_monthly_income"
            app:text_result="@string/activity_result_simulation_text_percentage_cdi" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_annual_profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_percentage_cdi"
            app:text_result="@string/activity_result_simulation_text_annual_profit" />

        <com.example.challengeeasy.apresentation.customview.ResultTextView
            android:id="@+id/activity_result_simulation_text_view_period_profit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_annual_profit"
            app:text_result="@string/activity_result_simulation_text_period_profit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_result_simulation_button_simulate_again"
            style="@style/buttonSimulate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tallest"
            android:text="@string/activity_result_simulation_text_simulate_again"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_result_simulation_text_view_period_profit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>