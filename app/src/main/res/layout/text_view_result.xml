<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_result_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_result_guideline"
        tools:text="Valor aplicado inicialmente"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_result_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/gray_504D4D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_result_text"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_result_text"
        app:layout_constraintStart_toStartOf="@+id/text_view_result_guideline"
        android:gravity="end"
        tools:text="R$ 99.999,99"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_result_guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.59"/>

</merge>